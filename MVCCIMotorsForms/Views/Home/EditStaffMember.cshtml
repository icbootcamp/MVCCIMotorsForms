@model MVCCIMotorsForms.Models.StaffClass
@{
    ViewBag.Title = "EditStaffMember";
}


<h2>EditStaffMember</h2>
<table>
    @using (Html.BeginForm())
    {
        <tr>
            <td>
                @Html.HiddenFor(m => m.isStaff)
                @Html.LabelFor(m => m.FirstName)
            </td>
            <td>
                @Html.TextBoxFor(m => m.FirstName)
            </td>

        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.LastName)
            </td>
            <td>
                @Html.TextBoxFor(m => m.LastName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Salary)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Salary)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Address1)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Address1)
            </td>
        </tr>
        if (Model.isStaff)
        {
            <tr>
                <td>
                    @Html.LabelFor(m => m.PersonTypeId)
                </td>
                <td>
                    @Html.DropDownListFor(m => m.PersonTypeId, Model.StaffTypeList)
                </td>
            </tr>
        }
        else
        {
            <tr>
            <td>
                @Html.HiddenFor(m => m.PersonTypeId)
            </td>
                </tr>
        }

        <tr>
            <td>
                <input type="submit" />
            </td>
        </tr>



    }

</table>





